<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DadJokesApp.Views.DisplayJokesView"
             xmlns:model="clr-namespace:DadJokesApp.Model"
             xmlns:viewmodel="clr-namespace:DadJokesApp.ViewModels"
             x:DataType="viewmodel:DisplayJokesViewModel"
             Title="DisplayJokesView">
    <Grid Padding="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            
        </Grid.RowDefinitions>



        <CollectionView ItemsSource="{Binding DadJokes}"
                        Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:DadJoke">
                    <Label Text="{Binding joke}" 
                           FontSize="Small" 
                           Padding ="5"
                           TextColor="Gray" 
                            Margin="0,0,10,10" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="1"
              Text="New Dad Joke"
              
              VerticalOptions="End" 
              HorizontalOptions="End"
              Command="{Binding GetDadJoke}" /> 
    </Grid>
</ContentPage>